	/**
	 * Legt een coordinaat vast in de vorm van een straal en een hoek
	 * @author Jelle Sjollema
	 */
	public class Poolcoordinaat
	{
		public var r:Number;
		public var hoek:Hoek;
		
		public function Poolcoordinaat(r:Number, hoek:Hoek) 
		{
			this.r = r;
			this.hoek = hoek;
			
			
		}
		
	}

}